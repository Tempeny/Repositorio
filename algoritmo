public static void borrarNave(Scanner scanner) {
    System.out.println("Ingrese el nombre de la nave que desea eliminar:");
    String nombreAEliminar = scanner.nextLine();

    boolean naveEncontrada = false;
    for (int i = 0; i < naves.size(); i++) {
        if (naves.get(i).getNombre().equalsIgnoreCase(nombreAEliminar)) {
            naves.remove(i);
            System.out.println("Nave '" + nombreAEliminar + "' eliminada exitosamente.");
            naveEncontrada = true;
            break;
        }
    }

    if (!naveEncontrada) {
        System.out.println("No se encontrÃ³ ninguna nave con el nombre '" + nombreAEliminar + "'.");
    }
}