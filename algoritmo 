public class Mision {
    public enum Tipo { EXPLORACION, RECOLECCION, COLONIZACION }
    public enum Estado { PENDIENTE, COMPLETADA, FALLIDA }

    private String nombre;
    private int duracion;
    private int prioridad;
    private Tipo tipo;
    private Estado estado;
    private int experienciaRequerida;
    private String evento;
    private Nave naveAsignada;

    public Mision(String nombre, int duracion, int prioridad, Tipo tipo, int experienciaRequerida) {
        this.nombre = nombre;
        this.duracion = duracion;
        this.prioridad = prioridad;
        this.tipo = tipo;
        this.estado = Estado.PENDIENTE;
        this.experienciaRequerida = experienciaRequerida;
    }

    // Getters y setters
    // ...
    
    public String getResumen() {
        return String.format("%s (%s) - %s - Nave: %s - Evento: %s", 
            nombre, tipo, estado, naveAsignada != null ? naveAsignada.getNombre() : "N/A", evento);
    }

    // Getters necesarios (ej: getDuracion, getTipo, etc.)
    // ...
}